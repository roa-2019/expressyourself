<h1>Comments Page!</h1>


<img src="{{image}}" alt="{{name}}">
<p>{{name}}</p>
<p>{{description}}</p>
{{#each comments}}
<p>{{this.text}}</p>
<p>{{this.rating}}</p>
{{/each}}

<form action='/category/comments/{{id}}' method='post'>
  Add comments: <br>
  <input type="text" name="text">
  <br>Rating: <br>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type='submit'></input>
</form>